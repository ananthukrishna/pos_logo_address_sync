<?xml version="1.0" encoding="UTF-8"?>
<templates id="point_of_sale.template" xml:space="preserve">
    <t t-extend="Chrome">
        <t t-jquery="div.pos-topheader" t-operation="replace">
        <div class="pos-topheader">
            <div class="pos-branding">
                <t t-if='widget.logo'>                
                    <img class="pos-logo" t-att-src="widget.logo"/>
                </t>
                <t t-if='!widget.logo'>
                       <img class="pos-logo" src="/pos_logo_address_sync/static/src/img/logo.png" />
                </t>
                <span class="placeholder-UsernameWidget"></span>
            </div>
            <div class="pos-rightheader">
                <span class="placeholder-OrderSelectorWidget"></span>
                <!-- here goes header buttons -->
            </div>
        </div>
        </t>
    </t>
</templates>